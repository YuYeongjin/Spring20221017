<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.zerock.mapper.member.MemberMapper">
    <delete id="deleteById">
        DELETE FROM Member WHERE id= #{id}
    </delete>
    <update id="update">
        UPDATE Member SET password=#{password},email=#{email} WHERE id= #{id}

    </update>
    <select id="selectById" resultType="org.zerock.domain.member.MemberDto">
        SELECT id, password, email, inserted FROM Member WHERE Id= #{id}

    </select>

    <insert id="insert">
        INSERT INTO Member (id, password,email) VALUES (#{id}, #{password}, #{email})
    </insert>
    <select id="selectAll" resultType="org.zerock.domain.member.MemberDto">
        SELECT id, 'Hidden' password, email, inserted FROM Member
        ORDER BY id
    </select>
</mapper>